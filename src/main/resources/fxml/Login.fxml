<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dcardprocessing.controller.LoginController">
   <children>
      <AnchorPane prefHeight="317.0" prefWidth="461.0" styleClass="background" stylesheets="@../styles/Styles.css">
         <children>
               <Label fx:id="lblLogin" layoutX="108.0" layoutY="28.0" prefHeight="30.0" prefWidth="350.0" text="     Card Scan Application" >
              
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="username" layoutX="131.0" layoutY="102.0" prefHeight="36.0" prefWidth="204.0" promptText="Username" />
            <HBox layoutX="138.0" layoutY="94.0" />
            <PasswordField fx:id="password" layoutX="131.0" layoutY="157.0" onAction="#login" prefHeight="36.0" prefWidth="204.0" promptText="Password" />
            <Button fx:id="btnLogin" layoutX="240.0" layoutY="212.0" mnemonicParsing="false" onAction="#login" prefHeight="31.0" prefWidth="100.0" styleClass="btnGreen" text="Log On" textFill="WHITE">
               <font>
                  <Font name="Calibri Bold" size="16.0" />
               </font>
               <effect>
                  <DropShadow blurType="ONE_PASS_BOX" />
               </effect>
            </Button>
            <Button fx:id="btnLogin1" layoutX="131.0" layoutY="212.0" mnemonicParsing="false" onAction="#cancel" prefHeight="31.0" prefWidth="94.0" styleClass="btnGreen" text="Cancel" textFill="WHITE">
               <effect>
                  <DropShadow blurType="ONE_PASS_BOX" />
               </effect>
               <font>
                  <Font name="Calibri Bold" size="15.0" />
               </font>
            </Button>
       
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </AnchorPane>
   </children>
</VBox>
